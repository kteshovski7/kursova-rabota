#include <stdio.h>
#include <stdlib.h>

const int N = 20;
int main() {
    int A[N][N], B[N][N], i, j, n, count = 0;
    int MAX = -999;
    printf("Задача: Да се състави програма за обработка на два масива A[N][N] и B[N][N], където данните са цели числа в интервала [-1000;1000]. Програмата да извърши следните действия:\n");
    printf("- отпечатване на условието на задачата;\n");
    printf("- отпечатване имената на автора на програмата;\n");
    printf("- въвеждане на входните данни;\n");
    printf("- отпечатване на входните данни;\n");
    printf("- а) да се нулират елементите в масива А, които са по-големи от MAX елемент на масива B;\n");
    printf("- б) да се определи броя на променените елементи в масива А;\n");
    printf("- отпечатване на получените резултати след обработка а) и след обработка б)\n");
    printf("Автор: Костадин Тешовски\n");
    printf("Въвеждане на входни данни\n");
    scanf("%d", &n);

    printf("Въведете елементите на масива А:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            do {
                printf("A[%d][%d] = ", i, j);
                scanf("%d", &A[i][j]);
            } while (A[i][j] < -1000 || A[i][j] > 1000);

        }
    }

    printf("Извеждане на входни данни за матрица А\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            printf("%d ", A[i][j]);
        }
        printf("\n");
    }

    printf("Въвеждане елементите на масива B:\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            do {
                printf("B[%d][%d] = ", i, j);
                scanf("%d", &B[i][j]);
            } while (B[i][j] < -1000 || B[i][j] > 1000);
            if  (B[i][j] > MAX)
                MAX = B[i][j];
        }
    }

    printf("Извеждане на входни данни за матрица B\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            printf("%d ", B[i][j]);
        }
        printf("\n");
    }
    printf("Извеждане на входни данни за матрица А\n");
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            if(A[i][j] > MAX)
            {A[i][j] = 0;
                count++;}
            printf("%d ", A[i][j]);
        }
        printf("\n");
    }
    printf("Броят на променените елементи е: %d", count);

    system("pause");
    return 0;
}
